    "prepublish": "npm run build",
    "test": "npm run jasmine && npm run lint",
    "test:develop": "npm run build && npm run coverage:jasmine && npm run lint"
  },
  "nyc": {
    "exclude": [
      "**/*spec.js",
      "lib/test",
      "src"
    ]
